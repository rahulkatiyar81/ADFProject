{
	"name": "pl_SQL_DC_To_Azure_Table",
	"properties": {
		"activities": [
			{
				"name": "SQLDB_AzureTable",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
